


<%= render 'users/list', user: @user %>

<%= render 'books/list', book: @book %>


<%#ユーザの投稿一覧%>
<h1>Books</h1>
<table>
	<tr>
		<th><%#プロフ画%></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td>
				<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
			</td>
			<td>
				<%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
			</td>

			<td>
				<%= book.body %>
			</td>
		</tr>
	<% end %>
</table>
<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
 <% end %>