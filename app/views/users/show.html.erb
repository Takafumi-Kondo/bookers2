<%#boostrapのサクセウメッセ%>
<div class="container">
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>


	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<br>
			<br>
			<%= render 'books/list', book: @book %>
		</div>

		<section class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<tr>
					<th><%#プロフ画%></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", class: "user_image" %>
						</td>
						<td>
							<%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
						</td>

						<td>
							<%= book.body %>
						</td>
					</tr>
				<% end %>
			</table>
		</section>
	</div>
</div>