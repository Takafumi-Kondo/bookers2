<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", class: "user_image" %>
	<table class="table">
		<tr>
			<td>
				<strong>name</strong>
			</td>
			<td>
				<%= user.name %>
			</td>
		</tr>
		<tr>
			<td>
				<strong>introduction</strong>
			</td>
			<td>
				<%= current_user.introduction %>
			</td>
		</tr>
	</table>

    <% if user.id == current_user.id %>
    <p><%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %></p>
 	<% end %>

