<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<%= render 'books/list', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2 class="users-title">Users</h2>
			<table class="table">
				<tr>
					<th>image</th>
					<th>name</th>
					<th><%#showæ¬„%></th>
				</tr>
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "user_image", fallback: "no_image.jpg" %>
						</td>
						<td>
							<%= user.name %>
						</td>
						<td>
							<%= link_to 'show', user_path(user.id), class: "user_#{user.id}" %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>