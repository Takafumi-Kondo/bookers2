<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
		<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	<% end %>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user %>
			<br>
			<br>
			<%= render 'books/list', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%#画像をリンクにしてる%>
							<%= link_to user_path(book.user.id) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "user_image" %>
							<% end %>
						</td>
						<td>
							<%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
						</td>
						<td>
							<span><%= book.body %></span><br>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>