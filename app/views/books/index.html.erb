<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
		<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	<% end %>
<% end %>

<div class="profile-container">
<%#= render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>
</div>

<div class="books-container">
	<div class="books-list">
		<h2 class="books-title">Books</h2>
		<table>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			<% @books.each do |book| %>
				<tr>
					<td>
						<!-- 後で画像リンクに -->
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "" %>
					</td>
					<td>
						<%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
					</td>
					<td>
						<span><%= book.body %></span><br>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>