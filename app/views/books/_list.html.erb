<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <p class="profile-name"><strong>name</strong><%= book.user.name %></p>
    <p class="introduction"><strong>introduction</strong><%=#userのテキスト %></p>
        <% if @user.id == current_user.id %>
        <p><%= link_to "編集", edit_user_path(@user), class: "edit_user_#{@user.id}" %></p>
    <% end %>



<h2>New Book</h2>
<%= form_for(book) do |f| %>
	<h4>Title</h4><br>
		<%= f.text_field :title, class:"book_title" %>
	<h4>Opinion</h4><br>
		<%= f.text_area :body, class:"book_body" %><br>
<%= f.submit 'Create Book' %>
<% end %>
